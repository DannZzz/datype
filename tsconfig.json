{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "node_modules/datypes/typings/datypes"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/"],
  "ts-node": {
    "files": true
  }
}
